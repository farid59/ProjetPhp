{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form name="form" id="form" class="form-horizontal" enctype="multipart/form-data" method="POST" action="{{ path("fos_user_security_check") }}">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <input id="username" name="_username" value="{{ last_username }}" 
            required="required" type="text" class="form-control" placeholder="{{ 'security.login.username'|trans }}">                                        
    </div>

    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <input id="password" type="password" class="form-control" name="_password" placeholder="{{ 'security.login.password'|trans }}" required="required">
    </div>    

    <div class="input-group">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>                                                                 

    <div class="form-group">
        <div class="col-sm-3 controls">        
        <a href="{{ path("fos_user_registration_register") }}" class="btn btn-primary pull-right"><i class="glyphicon glyphicon-registration-mark"></i> {{ 'layout.register'|trans }}</a></div>
        <!-- Button -->
        <div class="col-sm-9 controls">
            <button type="submit" href="#" class="btn btn-primary pull-right"><i class="glyphicon glyphicon-log-in"></i> {{ 'security.login.submit'|trans }}</button>                          
        </div>
    </div>

</form>    

{% endblock fos_user_content %}
